#############################################################################
# Makefile for building the utils:
#	- bin2mem
#	- bin2hex
#############################################################################
CC      =gcc
CFLAGS  =-I -Wall -Werror
TARGETS = bin2mem bin2hex
#-------------------------------------------------------------------------------
.PHONY: clean

#-------------------------------------------------------------------------------
all: $(TARGETS)

#-------------------------------------------------------------------------------
%: out/%.o
	@$(CC) $(CFLAGS) -o $@ $^

#-------------------------------------------------------------------------------
out/%.o: src/%.c
	@mkdir -p out
	@$(CC) $(CFLAGS) -o $@ -c $<

#-------------------------------------------------------------------------------
clean:
	rm -rf out
	rm -f $(TARGETS)
